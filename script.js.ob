function CongratulateWithSilvester ( type, n = 10, ) {
    let i = 0
    switch ( type ) {
        case "for":
            for ( i; i < n; n-- ) {
                console.log( n );
            };
            break;
        case "while":
            while ( n ) {
                console.log( n );
                n--;
            }
            break;
    }
    console.log( "Happy New Year!" );
}

CongratulateWithSilvester( "while" )



