function nwd ( a, b ) {
    if ( b === 0 ) {
        return a;
    } else {
        return nwd( b, a % b );
    }
}

function ReturnNWDToHtml () {

    const a = document.getElementById( "n1" ).value;
    const b = document.getElementById( "n2" ).value;

    const res = nwd( a, b );

    document.getElementById( "resultNWD" ).innerHTML = `NWD = (${ a }, ${ b }) = ${ res }`;
}



